<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:padding="2px">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_marginBottom="2dp"
            android:layout_weight="1" android:background="#fffff4ad" android:layout_marginTop="2dp">
        <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/listView" android:layout_gravity="center_horizontal" android:divider="#ffff6e45"
                android:dividerHeight="2dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="40dp" android:layout_marginBottom="3dp"
            android:background="#ffffdbdd" android:layout_marginTop="1dp">
        <Button
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:text="结算"
                android:id="@+id/button5" android:layout_marginRight="5dp"
                android:layout_weight="5"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:text="结算2"
                android:id="@+id/button7" android:gravity="fill_horizontal|center"/>
    </LinearLayout>
</LinearLayout>